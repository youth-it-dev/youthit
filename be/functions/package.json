{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "firebase emulators:exec --only functions --project youthvoice-2025 \"echo ' 에뮬레이터 빌드 및 기동 테스트 완료'\"",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "get:token": "node ./src/scripts/getIdToken.js --email=$EMAIL --password=$PASSWORD",
    "get:token:example": "EMAIL=hong@example.com PASSWORD=password123 pnpm run get:token",
    "watch:token": "node ./src/scripts/getIdToken.js --email=$EMAIL --password=$PASSWORD && sleep 3500 && pnpm run watch:token",
    "test:check-email": "node ./src/scripts/testCheckEmail.js",
    "test:check-email:emu": "USE_EMULATOR=true node ./src/scripts/testCheckEmail.js"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@notionhq/client": "^5.1.0",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "file-type": "^21.0.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^4.9.0",
    "notion-client": "7.7.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
